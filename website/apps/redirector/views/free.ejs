<%
    var title = "Redirecting you to http://" + to_domain + "/";
    var should_meta_redirect = true;
%>

<% include header %>

		<h1>
		    <a href="http://<%= to_domain %>/">http://<%= to_domain %>/</a>
		</h1>

		<h2>
		    Redirecting <span id="countdown">in <%= redirectDelay %> seconds</span>.
		</h2>

        <p>
            Redirection service provided by <a href="http://<%= sales_site_domain %>/"><%= sales_site_name %></a>.
        </p>

        <p>
            You can <a id="domain_status" href="http://<%= sales_site_domain %>/domain/<%= from_domain %>">make this redirect instant</a>.
        </p>

        <script type="text/javascript">

            var timeRemaining = <%= redirectDelay %>;
            var intervalId = setInterval(
                function () {
                    timeRemaining--;
                    if (timeRemaining <= 0) clearInterval( intervalId );
                    
                    var string = 'in ' + timeRemaining + ' seconds';
                    if ( timeRemaining == 1 ) string = 'in 1 second';
                    if ( timeRemaining <= 0 ) string = 'now';
                    
                    var countdown = document.getElementById('countdown');
                    countdown.innerHTML = string;                
                },
                1000
            );
            
            
        </script>

<% include footer %>